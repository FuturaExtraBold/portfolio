{
  "compilerOptions": {
    "target": "ESNext", // or "ES2015"
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx", // For React 17+ JSX transform
    "strict": true, // Optional: ensures stricter type-checking
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", // Ensure all files in `src/` are included
    "src/declarations.d.ts" // Explicitly include the type declarations file
  ],
  "exclude": ["node_modules"]
}
